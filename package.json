{
  "name": "hometap",
  "version": "0.0.0",
  "description": "A (currently) web-based application for building homebrew beer recipes for.",
  "main": "index.js",
  "scripts": {
    "seed": "mkdir -p lib && cp -R data lib/data",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm run build:server && npm run build:static && npm run dev:watch",
    "dev:watch": "npm-run-all --parallel build:watch dev:server",
    "dev:server": "node --require dotenv/config lib/server.js",
    "build:server": "babel app --out-dir lib --ignore app/src",
    "build:static": "webpack",
    "build:watch": "chokidar 'app/src/**/(*.js|*.jsx)'  -c 'npm run build:static'",
    "clean": "rm -rf lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matt-whitaker/hometap.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/matt-whitaker/hometap/issues"
  },
  "homepage": "https://github.com/matt-whitaker/hometap#readme",
  "dependencies": {
    "@material-ui/core": "^1.2.1",
    "@material-ui/icons": "^1.1.0",
    "bluebird": "^3.5.1",
    "classnames": "^2.2.6",
    "cluster": "^0.7.7",
    "deep-equal": "^1.0.1",
    "express": "^4.16.3",
    "ramda": "^0.25.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "superagent": "^3.8.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chokidar-cli": "^1.2.0",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^0.28.11",
    "dotenv": "^6.0.0",
    "dotenv-webpack": "^1.5.7",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "^3.2.0",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "npm-run-all": "^4.1.3",
    "style-loader": "^0.21.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.7"
  }
}
